---
import { Toaster } from "@/components/components/ui/sonner"
import Footer from "../components/Footer.astro"
import Navbar from "../components/Navbar"
import "../styles/global.css"
import Analytics from "@vercel/analytics/astro"
const { title, description, robots } = Astro.props
---

<!doctype html>
<html lang="hr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>
      {
        title ||
          "Izrada web stranica koje prate vaš poslovni rast | WebLifeSupport"
      }
    </title>
    <meta
      name="description"
      content={description ||
        "Gradimo moderne, brze i pouzdane web stranice koje rastu zajedno s vašim poslovanjem. Najmodernije tehnologije i stručna podrška | WebLifeSupport."}
    />
    {robots && <meta name="robots" content={robots} />}
    <link rel="icon" href="/favicon32.png" sizes="32x32" type="image/png" />
    <link rel="icon" href="/favicon16.png" sizes="16x16" type="image/png" />
    <link rel="apple-touch-icon" href="/favicon180.png" sizes="180x180" />
    <link
      rel="icon"
      href="/favicon128.ico"
      sizes="128x128"
      type="image/x-icon"
    />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body>
    <Navbar client:load />
    <slot />
    <Footer />
    <Toaster client:load />
    <Analytics />
  </body>

  <style>
    html,
    body {
      margin: 0;
      width: 100%;
      height: 100%;
    }
  </style>
</html>
