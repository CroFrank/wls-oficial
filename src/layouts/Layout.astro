---
import Navbar from "../components/Navbar"
import "../styles/global.css"
const { title, description } = Astro.props
---

<!doctype html>
<html lang="hr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>
      {
        title ||
          "Izrada web stranica koje prate vaš poslovni rast | WebLifeSupport"
      }
    </title>
    <meta
      name="description"
      content={description ||
        "Gradimo moderne, brze i pouzdane web stranice koje rastu zajedno s vašim poslovanjem. Najmodernije tehnologije i stručna podrška | WebLifeSupport."}
    />
  </head>
  <body>
    <Navbar client:load />
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
